page {
    width: 100%;
    height: 100%;
}

.fare-container {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    overflow: hidden;
}

.func-detail {
    width: 706rpx;
    padding: 74rpx 0 41rpx 0;
    margin: 0 22rpx;
    display: flex;
    flex-direction: row;
}

.sign,.invitation,.uppic,.shared {
    width: 235rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.func-pic,.share-pic {
    width: 119rpx;
    height: 119rpx;
    border-radius: 50%;
}

.func-text {
    margin-top: 41rpx;
    color: #333;
    font-size: 30rpx;
    text-align: center;
    position: relative;
}

.func-num,.func-kongjian,.func-price {
    color: #999;
    font-size: 25rpx;
    line-height: 24rpx;
}

.func-num {
    margin-top: 17rpx;
}

.func-kongjian {
    margin-top: 4rpx;
    margin-bottom: 36rpx;
}

.func-detail navigator {
    line-height: 37rpx;
}

.func-lookdetail {
    width: 143rpx;
    height: 37rpx;
    vertical-align: bottom;
}

.func-price {
    margin-top: 22rpx;
}

.share-detail {
    width: 706rpx;
    padding: 42rpx 0 41rpx 0;
    margin: 0 22rpx;
    display: flex;
    flex-direction: row;
}

.share-text {
    margin-top: 41rpx;
    font-size: 30rpx;
    line-height: 30rpx;
    color: #333;
    text-align: center;
    position: relative;
}

.share-price {
    font-size: 25rpx;
    line-height: 25rpx;
    color: #999;
    margin-top: 16rpx;
}

.xianshi {
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
    position: absolute;
    top: -5rpx;
    right: -20rpx;
}

.welSignModel {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 999;
    background: rgba(0,0,0,0.5);
}

.signModelDialog {
    width: 480rpx;
    height: 276rpx;
    background: #fff;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.dialogImg {
    width: 480rpx;
    height: 276rpx;
    vertical-align: bottom;
}

.smalltip {
    width: 100%;
    background-color: #f1f1f1;
    margin-top: 22rpx;
    height: 156rpx;
    display: flex;
    align-items: center;
}

.redtip {
    width: 53rpx;
    height: 54rpx;
    margin-left: 36rpx;
    margin-right: 24rpx;
}

.righttextarea {
    font-size: 24rpx;
    color: #666;
    line-height: 36rpx;
    width: 590rpx;
    height: 60%;
}