    border-radius: 50%;
}

.info-section {
    width: 100%;
    height: 50rpx;
    display: flex;
    justify-content: center;
}

.info-section>text:nth-of-type(1),.info-section>text:nth-of-type(3) {
    color: #999;
    font-size: 30rpx;
}

.info-section>text:nth-of-type(2) {
    color: #333;
    font-size: 30rpx;
    margin-left: 10rpx;
}

.au-section-center {
    margin-top: 50rpx;
