.bless-detail {
    padding-bottom: 100rpx;
}

.bd-icon {
    width: 44rpx;
    height: 44rpx;
}

.text-overflow {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.bd-content {
    box-sizing: border-box;
    padding-left: 30rpx;
    padding-right: 30rpx;
    width: 100%;
    font-size: 0;
}

.bd-content-placeholder {
    box-sizing: border-box;
    padding-left: 30rpx;
    padding-right: 30rpx;
    width: 100%;
    height: 30rpx;
}

.bd-content-img {
    position: relative;
    width: 100%;
}

.bd-content-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 14rpx;
}

.bd-ci-item {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #999;
}

.bd-ci-like {
    padding-left: 9rpx;
    padding-right: 16rpx;
    width: 44rpx;
    height: 44rpx;
}

.bd-ci-time {
    font-size: 26rpx;
}

.bd-content-img-more {
    position: absolute;
    top: 32rpx;
    left: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 248rpx;
    height: 66rpx;
    font-size: 24rpx;
    color: #fff;
    background-color: rgba(0,0,0,0.4);
    border-radius: 33rpx;
}

.bd-content-img-number {
    position: absolute;
    top: 32rpx;
    right: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 68rpx;
    height: 68rpx;
    font-size: 30rpx;
    color: #fff;
    background-color: rgba(0,0,0,0.5);
    border-radius: 50%;
}

.bd-content-img-tag {
    position: absolute;
    bottom: 30rpx;
    right: 28rpx;
    width: 218rpx;
    height: 72rpx;
}

.bd-cit-img {
    width: 100%;
    height: 100%;
}

.bd-cit-text {
    position: absolute;
    top: 0;
    left: 0;
    box-sizing: border-box;
    padding-left: 58rpx;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    flex-direction: column;
    color: #fff;
}

.bd-cit-text-name {
    display: flex;
    align-items: center;
    flex: 1;
    font-size: 24rpx;
    max-width: 146rpx;
}

.bd-cit-text-greetings {
    flex: 1;
    font-size: 20rpx;
}

.bd-greetings {
    padding-top: 28rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.bd-greetings-title {
    padding-left: 14rpx;
    border-left: 12rpx solid #ffe500;
    font-size: 30rpx;
    font-weight: bolder;
    color: #333;
}

.bd-greetings-content {
    margin-top: 10rpx;
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx 24rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    color: #999;
    line-height: 1.8;
    width: 100%;
    border-radius: 20rpx;
    border-bottom: 1rpx solid #f1f1f1;
}

.bd-gc-item {
    margin-right: 36rpx;
    background: #f1f1f1;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 50rpx;
    color: #999;
    margin-bottom: 20rpx;
    padding: 0 22rpx;
}

.bd-comments {
    margin-top: 28rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.bd-comments-item {
    padding-top: 26rpx;
    padding-bottom: 26rpx;
}

.bd-comments-item-bt {
    border-top: 1px solid #eee;
}

.bd-ci-info {
    display: flex;
    justify-content: space-between;
}

.bd-ci-info-name {
    color: #333;
    font-size: 28rpx;
    font-weight: bolder;
}

.bd-ci-info-reply {
    font-weight: normal;
}

.bd-ci-info-datetime {
    font-size: 26rpx;
    color: #999;
}

.bd-ci-content {
    margin-top: 11rpx;
    font-size: 28rpx;
    color: #333;
}

.bd-footer {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    padding-top: 10rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
    background-color: #fff;
}

.bd-footer-left {
    flex: 1;
    display: flex;
}

.bd-footer-right {
    flex: 2;
    display: flex;
}

.bd-fl-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.bd-fl-item-name {
    padding-top: 8rpx;
    padding-bottom: 12rpx;
    font-size: 22rpx;
    color: #666;
}

.bd-fr-item {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80rpx;
}

.bd-fr-item-name {
    padding-left: 10rpx;
}

.bd-fr-jion {
    font-size: 27rpx;
    border-radius: 40rpx 0 0 40rpx;
    background-color: #999;
    color: #fff;
}

.bd-fr-invite {
    padding: 0;
    font-size: 30rpx;
    color: #333;
    border-radius: 0 40rpx 40rpx 0;
    background-color: #ffe500;
}

.bd-fr-invite-disabled {
    color: #fff;
    background-color: rgba(0,0,0,0.5);
}

.comment_box {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    top: 0;
    z-index: 2000;
    display: flex;
    align-items: flex-end;
    background-color: rgba(0,0,0,0.7);
}

.comment_box-main {
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid #eee;
}

.comment_box-input {
    width: 528rpx;
    height: 58rpx;
    line-height: 58rpx;
    font-size: 26rpx;
    color: #333;
    padding-left: 26rpx;
    background: rgb(245,245,245);
    border-radius: 60rpx;
}

.comment_box-input {
    color: #999;
    font-size: 26rpx;
}

.comment_box-submit {
    width: 132rpx;
    height: 58rpx;
    position: fixed;
    right: 20rpx;
    bottom: 20rpx;
    font-size: 28rpx;
    box-sizing: border-box;
    padding: 0;
    line-height: 59rpx;
    color: #fff;
    background: #cecece;
    margin: 0;
    border-radius: 60rpx;
}

.comment_box-submit-active {
    background: #ffe500;
    color: #333;
}