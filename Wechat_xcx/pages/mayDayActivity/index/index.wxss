.mayDay-comtainer {
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx;
}

.mayDay-header {
    position: relative;
    width: 100%;
    height: 264rpx;
    border-radius: 20rpx;
}

.mayDay-header image {
    width: 100%;
    height: 100%;
    vertical-align: bottom;
    border-radius: 20rpx;
}

.mayDay-voice {
    width: 100%;
    height: 60rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
    border-radius: 30rpx;
    background-color: #f1f1f1;
    display: flex;
    align-items: center;
    margin-top: 24rpx;
}

.mayDay-voice image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.mayDay-voice-box {
    width: 580rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    overflow: hidden;
}

.mayDay-voice-box text {
    color: #999;
    font-size: 26rpx;
    position: relative;
    animation: circularly 10s linear infinite;
    white-space: nowrap;
}

@-webkit-keyframes circularly {
    0% {
        left: 660rpx;
    }

    100% {
        left: -1160rpx;
    }
}

@keyframes circularly {
    0% {
        left: 660rpx;
    }

    100% {
        left: -1160rpx;
    }
}

.mayDay-title {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 28rpx;
}

.mayDay-share {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 30rpx;
}

.mayDay-share button {
    width: 120rpx;
    height: 60rpx;
    border-radius: 30rpx;
    line-height: 60rpx;
    border: 1rpx solid #666;
    background-color: #fff;
    color: #333;
    font-size: 27rpx;
    padding: 0;
    margin: 0;
}

.mayDay-share image {
    position: absolute;
    top: -8rpx;
    right: -34rpx;
    width: 60rpx;
    height: 30rpx;
    border-radius: 16rpx;
}

.mayDay-title text {
    color: #333;
    font-size: 32rpx;
    font-weight: bold;
    line-height: 40rpx;
}

.mayDay-photoNum {
    width: 100%;
    height: 88rpx;
    border-top: 1rpx solid #eee;
    display: flex;
    justify-content: flex;
    align-items: center;
    margin-top: 28rpx;
}

.photoNums {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 10rpx;
}

.photoNums text {
    color: #333;
    font-size: 30rpx;
}

.num-tips {
    display: flex;
    justify-content: center;
    align-items: center;
}

.num-tips text {
    color: #999;
    font-size: 26rpx;
}

.mayDay-allphotos {
    width: 100%;
    border-top: 1rpx solid transparent;
}

.hasPhots {
    display: flex;
    flex-wrap: wrap;
}

.photos-item {
    position: relative;
    width: 224rpx;
    height: 224rpx;
    display: felx;
    justify-content: center;
    align-items: center;
    margin: 0 0 6rpx 6rpx;
}

.photos-item image {
    width: 100%;
    height: 100%;
}

.photos-item .item-deletePic {
    position: absolute;
    top: 12rpx;
    right: 12rpx;
    z-index: 99;
    width: 35rpx;
    height: 35rpx;
    border-radius: 50%;
}

.noPhotos {
    width: 323rpx;
    height: 87rpx;
    border-radius: 90rpx;
    background-color: #ffe500;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 206rpx auto 0;
}

.noPhotos image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 14rpx;
}

.noPhotos text {
    color: #333;
    font-size: 30rpx;
}

.get-rewards {
    position: fixed;
    left: 230rpx;
    bottom: 50rpx;
    z-index: 100;
    width: 290rpx;
    height: 90rpx;
}

.get-rewards image {
    width: 100%;
    height: 100%;
    vertical-align: bottom;
}

.rewardsModalBox {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 200;
    background-color: rgba(0,0,0,0.7);
    display: flex;
    justify-content: center;
    align-items: center;
}

.rewardsAddrBox {
    position: relative;
    width: 608rpx;
    border-radius: 40rpx;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.closeRewardsModal {
    position: absolute;
    top: -60rpx;
    right: 0;
    width: 44rpx;
    height: 44rpx;
}

.getInfo-title {
    width: 482rpx;
    display: flex;
    align-items: center;
    margin-top: 58rpx;
}

.getInfo-title view {
    width: 14rpx;
    height: 54rpx;
    background-color: #ffe500;
    margin-right: 16rpx;
}

.getInfo-title text {
    color: #333;
    font-size: 48rpx;
    line-height: 60rpx;
}

.getInfo-intro {
    width: 486rpx;
    color: #999;
    font-size: 24rpx;
    line-height: 36rpx;
    margin-top: 4rpx;
}

.getInfo-intro-normal {
    color: #333;
}

.getInfo-intro-copy {
    width: 100rpx;
    height: 38rpx;
    border-radius: 20rpx;
    background-color: #ffe500;
    text-align: center;
    line-height: 38rpx;
    color: #333;
    font-size: 18rpx;
    display: inline-block;
    margin-left: 16rpx;
}

.getInfo-formgroup {
    width: 482rpx;
    display: flex;
    flex-direction: column;
    margin-top: 34rpx;
}

.getInfo-formgroup text {
    color: #999;
    font-size: 24rpx;
    line-height: 36rpx;
}

.getInfo-formgroup input {
    width: 480rpx;
    height: 60rpx;
    border: 1rpx solid #999;
    border-radius: 10rpx;
    margin-top: 16rpx;
    box-sizing: border-box;
    padding-left: 16rpx;
    color: #333;
    font-size: 24rpx;
}

.getInfo-btn {
    padding: 0;
    width: 220rpx;
    height: 66rpx;
    line-height: 66rpx;
    border-radius: 70rpx;
    background-color: #ffe500;
    color: #333;
    font-size: 30rpx;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
}

.holderStyle {
    color: #999;
    font-size: 24rpx;
}

.priceTitle {
    width: 482rpx;
    display: flex;
    align-items: center;
    margin-top: 10rpx;
}

.priceTitle text {
    color: #333;
    font-size: 30rpx;
    font-weight: bold;
}

.activityGoHome {
    position: fixed;
    top: 10rpx;
    left: -10rpx;
    width: 146rpx;
    height: 56rpx;
    background-color: #ffe500;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 0 30rpx 30rpx 0;
}

.activityGoHome text {
    color: #333;
    font-size: 26rpx;
}