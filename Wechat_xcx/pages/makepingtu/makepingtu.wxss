    top: 16rpx;
    left: 21rpx;
}

.p-holder {
    color: #999;
    font-size: 30rpx;
}

.submit {
    width: 182rpx;
    height: 62rpx;
    line-height: 62rpx;
    text-align: center;
    border-radius: 8rpx;
    color: white;
    font-size: 30rpx;
    background: #cecece;
    float: right;
    margin-top: 43rpx;
}

.submit::after {
    border: 0;
}