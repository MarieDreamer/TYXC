    box-sizing: border-box;
    width: 100%;
    height: 100%;
    padding: 0 60rpx;
}

.pingtu-pic {
    width: 626rpx;
    height: 626rpx;
    border: 1rpx solid #333;
    background: url('http://oibl5dyji.bkt.clouddn.com/20170704103221.png') no-repeat;
    background-size: cover;
    margin-top: 62rpx;
}

.addPic {
    width: 94rpx;
    height: 139rpx;
    margin-top: 270rpx;
    margin-left: 266rpx;
}

.showPic {
    width: 100%;
    height: 100%;
    background: #fff;
}

.inputsection {
    width: 100%;
    margin-top: 30rpx;
}

.inputBox {
    width: 100%;
    height: 58rpx;
    position: relative;
}

.inputPmt {
    box-sizing: border-box;
