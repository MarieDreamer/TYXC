.publish_menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255,255,255,0);
    z-index: 1800;
    transition: all 0.3s ease;
}

.publish_menu-on {
    background-color: rgba(255,255,255,0.7);
}

.icon {
    width: 88rpx;
    height: 88rpx;
}

.pm-main {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transform: translate(0,1200rpx);
    transition: all 0.3s ease;
}

.pm-main-on {
    transform: translate(0,0);
}

.pm-main-header {
    box-sizing: border-box;
    padding-left: 74rpx;
    display: flex;
    flex-direction: column;
}

.pm-mh-title {
    margin-top: 124rpx;
    font-size: 48rpx;
    font-weight: bolder;
    color: #333;
}

.pm-mh-desc {
    margin-top: 26rpx;
    font-size: 24rpx;
    color: #999;
}

.pm-main-body {
    box-sizing: border-box;
    flex: 1;
    display: flex;
    align-items: flex-end;
    flex-wrap: wrap;
    align-content: flex-end;
}

.pm-mb-item {
    width: 33.33%;
    margin-bottom: 86rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
}

.pm-main-body-double .pm-mb-item {
    width: 50%;
}

.pm-mb-double {
    width: 50%;
}

.pm-mb-item-name {
    margin-top: 20rpx;
    font-size: 26rpx;
    color: #333;
}

.pm-main-footer {
    display: flex;
    justify-content: center;
    padding-bottom: 50rpx;
}