.menu_modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3000;
    transition: all .2s ease-in-out;
}

.menu_modal-show {
    background-color: rgba(0,0,0,0.8);
}

.mm-body {
    position: absolute;
    bottom: -900rpx;
    left: 0;
    width: 100%;
    min-height: 120rpx;
    transition: all .2s ease-in-out;
}

.mm-body-show {
    bottom: 0;
}

.mm-close {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin-bottom: 50rpx;
    min-height: 20rpx;
}

.mm-close-icon {
    width: 77rpx;
    height: 77rpx;
}

.mm-main {
    padding-top: 98rpx;
    padding-bottom: 62rpx;
    background-color: #fff;
    min-height: 120rpx;
    border-radius: 40rpx 40rpx 0 0;
}

.mm-main-title {
    padding-left: 58rpx;
    padding-right: 58rpx;
    margin-bottom: 64rpx;
    font-size: 48rpx;
    font-weight: bolder;
    color: #333;
}