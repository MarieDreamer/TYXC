page {
    background: #fff;
}

.regi-list {
    margin: 0 30rpx;
    border-bottom: 1px solid #c9c9c9;
    position: relative;
}

.regi-inpt {
    display: block;
    width: 100%;
    height: 100rpx;
    font-size: 28rpx;
    color: #333;
}

.yzm {
    width: 60%;
}

.regi-yzm {
    position: absolute;
    z-index: 2;
    top: 0;
    right: 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    color: #fe6702;
    font-size: 24rpx;
    padding: 0;
    border: none;
    background: #fff;
}

.regi-yzm::after {
    border: none;
}

.regi-bottom {
    margin: 0 30rpx;
}

.regi-btn {
    margin-top: 50rpx;
    font-size: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #fe6702;
    color: #fff;
    border-radius: 0;
}

.regi-have {
    color: #000;
    font-size: 27rpx;
    height: 70rpx;
    text-align: right;
    line-height: 70rpx;
}

.regi-there {
    text-align: center;
    margin-top: 35rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #ababab;
    font-size: 24rpx;
}

.regi-group {
    margin-top: 45rpx;
    text-align: center;
}

.regi-iconwx {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 1rpx solid #eaeaea;
    overflow: hidden;
}