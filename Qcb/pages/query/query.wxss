.query-con {
    width: 100%;
}

.query-con-list {
    background: #fff;
    margin: 2rpx 0 18rpx 0;
}

.query-con-list-t {
    margin: 0 20rpx;
    font-size: 28rpx;
    color: #333;
    line-height: 70rpx;
}

.query-con-list-c {
    margin: 0 20rpx;
    background: #F66565;
    border-radius: 6rpx;
    height: 200rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 96rpx;
    padding: 0 20rpx;
    color: #fff;
}

.query-con-list-c-lt {
    display: flex;
    justify-content: center;
    letter-spacing: 30rpx;
    position: relative;
}

.query-num {
    position: relative;
    z-index: 3;
    display: block;
}

.query-bg {
    position: absolute;
    top: 21%;
    right: 4%;
    background: #feb645;
    width: 80rpx;
    height: 90rpx;
    border-radius: 30rpx;
    z-index: 2;
}

.query-con-list-c-rt {
    font-size: 24rpx;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    width: 200rpx;
    border-left: 2rpx solid #fff;
}

.resul {
    font-size: 52rpx;
    display: flex;
    justify-content: center;
    width: 100%;
}

.query-con-list-d {
    margin: 0 20rpx;
    display: flex;
    font-size: 28rpx;
    color: #F66565;
    line-height: 100rpx;
}

.defult {
    color: #999;
}