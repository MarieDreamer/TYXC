.coup-box {
    padding: 10rpx 20rpx 0 20rpx;
    margin-top: 80rpx;
}

.coup-li {
    margin-top: 10rpx;
    background: #ee3939;
    overflow: hidden;
    position: relative;
    height: 230rpx;
    padding: 13rpx 25rpx;
    text-align: center;
    color: #fff;
}

.coup-lt {
    width: 360rpx;
    line-height: 230rpx;
    font-size: 150rpx;
    float: left;
    font-family: Impact,Haettenschweiler,'Arial Narrow Bold',sans-serif;
    border-right: 1rpx solid #fff;
}

.coup-rt {
    margin-left: 225rpx;
}

.co-r-name {
    margin-top: 30rpx;
    padding-top: 15rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 60rpx;
}

.co-r-mo {
    display: inline-block;
    padding: 0 25rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #fff;
    color: #ee3939;
}

.co-r-day {
    height: 60rpx;
    line-height: 60rpx;
    overflow: hidden;
    font-size: 27rpx;
}

.c-l-dw {
    position: absolute;
    z-index: 10;
    top: 10rpx;
    left: 25rpx;
    width: 40rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 50rpx;
}

.c-l-rou {
    width: 8rpx;
    height: 256rpx;
    display: block;
    position: absolute;
    z-index: 3;
    left: 0;
    top: 0;
}

.c-r-rou {
    width: 8rpx;
    height: 256rpx;
    display: block;
    position: absolute;
    z-index: 3;
    right: 0;
    top: 0;
}

.coup2 {
    background: #ddd;
}

.coup2 .co-r-mo {
    color: #ddd;
}

.coup1 {
    background: #74B4FF;
}

.coup1 .co-r-mo {
    color: #74B4FF;
}

.topnavbox {
    position: fixed;
    width: 100%;
    height: 80rpx;
    background: #fff;
    top: 0rpx;
    border-bottom: solid 1rpx #ddd;
}

.topnav-list {
    width: 33%;
    float: left;
    height: 80rpx;
    line-height: 80rpx;
    color: #131313;
    text-align: center;
    font-size: 27rpx;
}

.topanv-this {
    color: #ee3939;
    border-bottom: 2rpx solid #ee3939;
    height: 78rpx;
    display: inline-block;
}