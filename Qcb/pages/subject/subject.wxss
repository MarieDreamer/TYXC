.list-con {
    width: 100%;
    background: #fff;
}

.list {
    padding: 0 25rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size: 28rpx;
    color: #333;
    height: 80rpx;
    border-bottom: 1px solid #f0f0f0;
}

.list text {
    width: 180rpx;
    display: block;
}

.list image {
    width: 12rpx;
    height: 21rpx;
}

.list input {
    width: 100%;
}

.list textarea {
    height: 122rpx;
    text-align: left;
    margin-top: 90rpx;
    width: 100%;
}

.h122 {
    height: 122rpx!important;
}

.but button {
    width: 704rpx;
    height: 85rpx;
    background-color: #fe6702;
    color: #fff;
    font-size: 32rpx;
    margin-top: 70rpx;
}

.animation-element-wrapper {
    display: flex;
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(0,0,0,0.6);
}

.animation-element {
    display: flex;
    position: fixed;
    width: 100%;
    height: 470rpx;
    bottom: 0;
    background-color: rgba(255,255,255,1);
}

.list-d {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;
    padding: 25rpx;
    width: 94%;
}

.list-d-lt {
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.list-d-lt image {
    width: 29rpx;
    height: 29rpx;
    margin-right: 10rpx;
}

.list-d-rt {
    display: flex;
    justify-content: space-around;
}

.list-d-rt-l image {
    width: 26rpx;
    height: 26rpx;
    margin: 0 15rpx 0 25rpx;
}

.active {
    color: #fe6702;
}

.animation-button {
    top: 20rpx;
    width: 290rpx;
    height: 100rpx;
    align-items: center;
}

.left-bt,.right-bt {
    color: #999999;
    display: inline-flex;
    position: fixed;
    margin-top: 20rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    font-size: 34rpx;
    font-family: Arial,Helvetica,sans-serif;
}

.left-bt {
    left: 30rpx;
}

.right-bt {
    right: 30rpx;
}

.line {
    display: block;
    position: fixed;
    height: 1rpx;
    width: 100%;
    margin-top: 89rpx;
    background-color: #eeeeee;
}

.tc {
    position: absolute;
    top: 0;
    background: #fff;
    padding: 10%;
    height: 100%;
    font-size: 28rpx;
}

.tc text {
    text-align: center;
    line-height: 46rpx;
    display: block;
    padding-bottom: 20rpx;
}

.tc .textarea {
    font-size: 24rpx;
    line-height: 40rpx;
    height: 80%;
}

.tc button {
    position: fixed;
    bottom: 5%;
    width: 80%;
    font-size: 28rpx;
}